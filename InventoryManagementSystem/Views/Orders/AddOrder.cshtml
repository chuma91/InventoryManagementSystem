@model InventoryManagementSystem.Models.Order

@{
    ViewBag.Title = "AddOrder";
    Layout = "~/Views/Shared/_TemplateLayout.cshtml";
}


<link href="~/Content/datatables.min.css" rel="stylesheet" />
<script src="~/Scripts/Orders/Orders.js"></script>

<style>
    .button {
        border-radius: 20px;
    }

    a {
        color: black;
    }
</style>


<div class="main-content">
    <section class="section">
        <div class="section-header">
            <h3>Order</h3>
            <div class="section-header-breadcrumb">
                <div class="breadcrumb-item active">Order</div>
                <div class="breadcrumb-item"><a href="@Url.Action("GetAllProducts", "Products")">Order List</a></div>
            </div>
        </div>
        <div class="section-body">
            <div class="row">
                <div class="col-12 col-md-12 col-lg-12">
                    <div class="card">
                        <div class="card-header">
                            <h4>Add Order</h4>
                        </div>
                        <div class="card-body" style="align-items:center">
                            <section class="section">
                                <div class="container mt-auto">
                                    <div class="row">
                                        <div class="col-12 col-sm-10 offset-sm-1 col-md-8 offset-md-2 col-lg-8 offset-lg-2 col-xl-8 offset-xl-2">
                                            <div class="card card-primary">
                                                <div class="card-body">
                                                    <span class="help-block">
                                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                                    </span>
                                                    <div class="row">
                                                        <div class="form-group col-12">
                                                            <label class="required">Product Name</label>
                                                            @*@Html.TextBoxFor(m => m.ProductName, new { @class = "form-control", id = "ProductName", maxlength = 40, placeholder = "Enter Product Name", required = "required" })*@
                                                            @Html.DropDownList("ProductName", null, "Select product", htmlAttributes: new { @class = "form-control", required = "autofocus" })
                                                            <div class="invalid-feedback">
                                                                Please Select your product
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="form-group col-12">
                                                            <label for="workRequestTitle" class="required">Customer</label><br />
                                                            @Html.DropDownList("Customer_ID", null, "Select Customer", htmlAttributes: new { @class = "form-control", required = "autofocus" })
                                                            <div class="invalid-feedback">
                                                                Please Select your customer
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="form-group col-12">
                                                            <label for="workRequestTitle" class="required">Supplier</label><br />
                                                            @Html.DropDownList("Supplier_ID", null, "Select Supplier", htmlAttributes: new { @class = "form-control", required = "autofocus" })
                                                            <div class="invalid-feedback">
                                                                Please Select your Supplier
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="form-group col-12">
                                                            <label for="workRequestTitle" class="required">Category</label><br />
                                                            @Html.DropDownList("Category_ID", null, "Select Category", htmlAttributes: new { @class = "form-control", required = "autofocus" })
                                                            <div class="invalid-feedback">
                                                                Please Select Category
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="form-group col-12">
                                                            <label class="required">Payment Recieved</label>
                                                            @*@Html.TextBoxFor(m => m.Payment_Recieved, new { @class = "form-control", id = "PaymentRecieved", placeholder = "Payment Recieved", required = "required" })*@
                                                            @Html.DropDownList("PaymentRecieved", null, "Select payment status", htmlAttributes: new { @class = "form-control", required = "autofocus" })
                                                            <div class="invalid-feedback">
                                                                Please Select Payment Status
                                                            </div>
                                                        </div>
                                                    </div>

                                                    <div class="row">
                                                        <div class="form-group col-12">
                                                            <label class="required">Date Sold</label>
                                                            <input type="text" id="DateSold" , placeholder="MM/DD/YYYY">
                                                            @Html.ValidationMessageFor(m => m.Date_Sold, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>
                                                    <div class="row form-group">
                                                        <div class="col-md-4"></div>
                                                        <div class="col-md-5">
                                                            <input type="button" onclick="AddOrder()" id="btnSubmit" class="btn btn-block btn-success" value="Add" />
                                                        </div>

                                                    </div>

                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </section>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
