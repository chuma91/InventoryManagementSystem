@model InventoryManagementSystem.Models.Customer
@{
    ViewBag.Title = "AddCustomer";
    Layout = "~/Views/Shared/_TemplateLayout.cshtml";
}

@using InventoryManagementSystem.Helpers;

<link href="~/Content/datatables.min.css" rel="stylesheet" />
<script src="~/Scripts/Customers/Customers.js"></script>

<style>
    .button {
        border-radius: 20px;
    }

    a {
        color: black;
    }
</style>

<div class="main-content">
    <section class="section">
        <div class="section-header">
            <h3>Supplier</h3>
            <div class="section-header-breadcrumb">
                <div class="breadcrumb-item active">Supplier</div>
                <div class="breadcrumb-item"><a href="@Url.Action("GetAllCustomers", "Customers")">Supplier List</a></div>
            </div>
        </div>
        <div class="section-body">
            <div class="row">
                <div class="col-12 col-md-12 col-lg-12">
                    <div class="card">
                        <div class="card-header">
                            <h4>Edit Supplier</h4>
                        </div>
                        <div class="card-body" style="align-items:center">
                            <section class="section">
                                <div class="container mt-auto">
                                    <div class="row">
                                        <div class="col-12 col-sm-10 offset-sm-1 col-md-8 offset-md-2 col-lg-8 offset-lg-2 col-xl-8 offset-xl-2">
                                            <div class="card card-primary">
                                                <div class="card-body">
                                                    <span class="help-block">
                                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                                    </span>
                                                    <div class="row">
                                                        <div class="form-group col-12">
                                                            <label class="required">Customer Name</label>
                                                            @Html.TextBoxFor(m => m.Customer_Name, new { @class = "form-control", id = "CustomerName", maxlength = 40, placeholder = "Enter Supplier Name", required = "required" })
                                                            @Html.ValidationMessageFor(m => m.Customer_Name, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="form-group col-12">
                                                            <label for="workRequestTitle" class="required">Supplier Email</label><br />
                                                            @Html.TextBoxFor(m => m.Customer_Email, new { @class = "form-control", id = "CustomerEmail", maxlength = 30, placeholder = "Enter Supplier Email", required = "required" })
                                                            @Html.ValidationMessageFor(m => m.Customer_Email, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="form-group col-12">
                                                            <label for="workRequestTitle" class="required">Supplier Telephone Number</label><br />
                                                            @Html.TextBoxFor(m => m.Customer_Telephone_Name, new { @class = "form-control", id = "CustomerTelephoneNumber", maxlength = 30, placeholder = "Enter Telephone", required = "required" })
                                                            @Html.ValidationMessageFor(m => m.Customer_Telephone_Name, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>

                                                    <div class="row">
                                                        <div class="form-group col-12">
                                                            <label for="workRequestTitle" class="required">Customer Address</label><br />
                                                            @Html.TextBoxFor(m => m.Customer_Address, new { @class = "form-control", id = "CustomerAddress", maxlength = 30, placeholder = "Enter Telephone", required = "required" })
                                                            @Html.ValidationMessageFor(m => m.Customer_Address, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row form-group">
                                                    <div class="col-md-4"></div>
                                                    <div class="col-md-5">
                                                        <input type="button" onclick="AddCustomer()" id="btnSubmit" class="btn btn-block btn-success" value="Add" />
                                                    </div>
                                                </div>

                                            </div>
                                        </div>

                                    </div>
    </section>

</div>
                        </div>
                        </div>
                </div>
            </div>
        </div>

